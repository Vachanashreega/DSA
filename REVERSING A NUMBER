#include<stdio.h>
int main()
{
    int number, rev = 0, remainder;
    printf("Enter a number to be reversed:\n");
    scanf("%d",&number);
    printf("\nReversed Number: ");
    while(number! = 0)
    {
        remainder = number%10;
        rev = rev*10 + remainder;
        number /= 10;
    }
    printf("%d",rev);
    return 0;
}
